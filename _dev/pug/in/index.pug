extends ../_layout.pug

block header-sharing
	meta(property='og:title', content="IN")
	meta(property='og:type', content='website')
	meta(property="og:url" content=document_root + "IN")
	meta(property="og:image" content=document_root + "IN/img/opengraphimage.jpg")
	meta(property='og:image:width', content='1200')
	meta(property='og:image:height', content='628')
	meta(property='og:description', content="Et si le digital sauvait le print ?")
	meta(property='fb:app_id', content='966242223397117')
	meta(name='twitter:card', content='summary_large_image')
	meta(name='twitter:title', content='IN')
	meta(name='twitter:description', content="Et si le digital sauvait le print ?")
	meta(name='twitter:url', content=document_root + "IN")
	meta(name='twitter:image', content=document_root + 'IN/img/opengraphimage.jpg')

block content
	div#project-banner(style="background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.4)), url('img/thumbnail.jpg')")
		div.text
			h1.display-4 IN
			h2 Et si le digital sauvait le&nbsp;print ?
	div#project-tags
		div.container
			div.row.pt-3
				div.col-md.pb-2
					ul
						li
							b Projet
						li Édition print
						li Projet scolaire
				div.col-md.pb-2
					ul
						li.pb-1 
							b Outils
						li Adobe Illustrator
						li Adobe Photoshop
						li Adobe InDesign
				div.col-md.pb-2
					ul
						li.mb-1
							b Collègues
						li
							a(href="https://www.behance.net/Alixbarral", target="_blank", rel="noopener") Alix Barral
						li
							a(href="http://gladyspichollet.com/", target="_blank", rel="noopener") Gladys Pichollet
						li
							a(href="https://www.behance.net/valentinvi5e22", target="_blank", rel="noopener") Valentin Vildart
						li
							a(href="http://jeremylepioufle.com/", target="_blank", rel="noopener") Jeremy Lepioufle
						li
							a(href="http://lematoux.com/", target="_blank", rel="noopener") Mathilde Bourbon
						li
							a(href="http://mel-lun.ml", target="_blank", rel="noopener") Mélissa Luntadila
	div#project-content
		div.container.pt-4
			div.row
				div.col-md-1
				div.col-md-10
					img(src="img/in-logo.jpg", alt="IN Magazine logo").mx-auto
					p Création d'un magazine sur le&nbsp;mariage entre le&nbsp;print et&nbsp;le&nbsp;digital.
					img(src="img/mockup.jpg", alt="")
					p Le magazine présente des&nbsp;interactions lorsque les&nbsp;pages et la&nbsp;couverture sont scannées avec une&nbsp;application de&nbsp;réalité virtuelle. 
					video(loop, muted, autoplay, preload="auto")
						source(src="img/animation.mp4", type="video/mp4")
