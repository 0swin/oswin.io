extends ../_layout.pug

block header-sharing
	meta(property='og:title', content="Owl.")
	meta(property='og:type', content='website')
	meta(property="og:url" content=document_root + "owl")
	meta(property="og:image" content=document_root + "owl/img/opengraphimage.jpg")
	meta(property='og:image:width', content='1200')
	meta(property='og:image:height', content='628')
	meta(property='og:description', content="Les radios associatives, c'est chouette !")
	meta(property='fb:app_id', content='966242223397117')
	meta(name='twitter:card', content='summary_large_image')
	meta(name='twitter:title', content='Owl.')
	meta(name='twitter:description', content="Les radios associatives, c'est chouette !")
	meta(name='twitter:url', content=document_root + "owl")
